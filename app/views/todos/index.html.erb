<h1>Listing todos</h1>

<table>
  <tr>
    <th>What</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todos.each do |todo| %>
  <tr>
    <td><%= todo.what %></td>
    <td><%= todo.address %></td>
    <td><%= todo.city %></td>
    <td><%= todo.state %></td>
    <td><%= link_to 'Show', todo %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Destroy', todo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

